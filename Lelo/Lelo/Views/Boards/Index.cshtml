@model IEnumerable<Lelo.Models.Board>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    

    <a href="@Url.Action("Create", "Boards")" class="btn btn-info btn-md">
        <span class="glyphicon glyphicon-plus"></span> Dodaj..
    </a>

</p>
<table class="table">


    <tr>
        @if (User.IsInRole("Admin"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Team.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Team.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
            }
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@Url.Action("Details", "Boards", new { id = item.Id })">
                    <span class="glyphicon glyphicon-search"></span>
                </a> | 
                <a href="@Url.Action("Edit", "Boards", new { id = item.Id })">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a> | 
                <a href="@Url.Action("Delete", "Boards", new { id = item.Id })">
                    <span class="glyphicon glyphicon-remove">
                    </span>
                </a>
            </td>
        </tr>
    }

</table>
